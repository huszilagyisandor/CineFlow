{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {

        "directory": {
            "type": "object",
            "properties": {
                "export_to": { "type": "string" },
                "retention": { "type": "integer", "minimum": 0, "maximum": 365, "default": 90 }
            }
        },

        "refresh": {
            "type": "object",
            "properties": {
                "interval": { "type": "integer", "minimum": 0, "maximum": 360, "default": 120 },
                "twshows": { "type": "boolean", "default": false },
                "movies": { "type": "boolean", "default": false }
            }
        },

        "logging": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "string",
                    "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
                    "default": "INFO"
                },
                "colors": { "type": "boolean", "default": true }
            }
        },

        "modules": {
            "type": "object",
            "properties": {
                "limit": { "type": "integer", "minimum": 0, "maximum": 100, "default": 30 }
            }
        },

        "tmdb": {
            "type": "object",
            "properties": {
                "key": { "type": "string" },
                "lang": { "type": "string", "default": "en-US" }
            }
        },

        "jackett": {
            "type": "object",
            "properties": {
                "url": { "type": "string" },
                "key": { "type": "string" },
                "categories": { "type": "string" },
                "include": { "type": "string" },
                "exclude": { "type": "string", "default": "dummy_BvTKb37YD3hadR89zkUI" }
            }
        },

        "jellyfin": {
            "type": "object",
            "properties": {
                "url": { "type": "string" },
                "key": { "type": "string" },
                "user": { "type": "string" },
                "libraries": { "type": "string" }
            }
        },

        "trakt": {
            "type": "object",
            "properties": {
                "client_id": { "type": "string" },
                "client_secret": { "type": "string" },
                "access_token": { "type": "string" }
            }
        },

        "poster": {
            "type": "object",
            "properties": {
                "rules": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        },

        "downloader": {
            "type": "object",
            "properties": {
                "url": { "type": "string" },
                "user": { "type": "string" },
                "passw": { "type": "string" },
                "savepath": { "type": "string" }
            }
        }
    }
}
